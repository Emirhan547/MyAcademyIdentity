@model Message
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">📨 Mail İçeriği</h3>
        </div>
        <div class="card-body p-3">
            <div class="mailbox-read-info mb-3">
                <h5>@Model.Subject</h5>
                <h6>
                    <i class="fas fa-user mr-1 text-primary"></i> @Model.Sender.Email
                    <span class="mailbox-read-time float-right">@Model.SentDate.ToString("dd.MM.yyyy HH:mm")</span>
                </h6>
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <span class="badge badge-info">@Model.Category</span>
                }
            </div>
            <div class="mailbox-read-message">
                <p>@Model.Body</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="float-right">
                <a href="/Message/SendMessage?replyTo=@Model.MessageId" class="btn btn-sm btn-primary">
                    <i class="fas fa-reply"></i> Yanıtla
                </a>
            </div>
            <form asp-action="DeleteMessage" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MessageId" />
                <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="far fa-trash-alt"></i> Sil
                </button>
            </form>
        </div>
    </div>
</div>
