@model List<Message>
@{
    ViewData["Title"] = "Taslaklar";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <div class="card card-warning card-outline">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-pencil-alt mr-1"></i> Taslaklar</h3>

            <div class="card-tools">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Taslak Ara">
                    <div class="input-group-append">
                        <div class="btn btn-warning">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="mailbox-controls mb-2">
                <!-- Check all button -->
                <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                    <i class="far fa-square"></i>
                </button>
                <div class="btn-group ml-1">
                    <button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-share"></i></button>
                </div>
                <button type="button" class="btn btn-default btn-sm ml-1"><i class="fas fa-sync-alt"></i></button>

                <div class="float-right">
                    1-@Model.Count/@Model.Count
                    <div class="btn-group ml-1">
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>

            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var badgeClass = item.Category switch
                            {
                                "Önemli" => "badge-danger",
                                "İş" => "badge-info",
                                "Aile" => "badge-success",
                                "Kişisel" => "badge-warning",
                                "Diğer" => "badge-secondary",
                                _ => "badge-primary"
                            };

                            <tr>
                                <td>
                                    <div class="icheck-primary">
                                        <input type="checkbox" id="check@(item.MessageId)" value="@item.MessageId" class="message-checkbox">
                                        <label for="check@(item.MessageId)"></label>
                                    </div>
                                </td>
                                <td class="mailbox-name">
                                    <a href="/Message/EditDraft/@item.MessageId">
                                        <i class="fas fa-user-circle text-muted mr-1"></i>
                                        @item.Receiver?.Email
                                    </a>
                                </td>
                                <td class="mailbox-subject text-truncate" style="max-width: 300px;">
                                    <b>@item.Subject</b> - @item.Body.Substring(0, Math.Min(item.Body.Length, 50))...
                                </td>
                                <td class="mailbox-attachment">
                                    @if (!string.IsNullOrEmpty(item.Category))
                                    {
                                        <span class="badge @badgeClass">@item.Category</span>
                                    }
                                </td>
                                <td class="mailbox-date">@item.SentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-right">
                                    <a href="/Message/EditDraft/@item.MessageId" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <form asp-action="DeleteMessage" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.MessageId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer p-0">
            <div class="mailbox-controls">
                <!-- Footer kontrolleri aynen korunuyor -->
                <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                    <i class="far fa-square"></i>
                </button>
                <div class="btn-group ml-1">
                    <button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-share"></i></button>
                </div>
                <button type="button" class="btn btn-default btn-sm ml-1"><i class="fas fa-sync-alt"></i></button>

                <div class="float-right">
                    1-@Model.Count/@Model.Count
                    <div class="btn-group ml-1">
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
