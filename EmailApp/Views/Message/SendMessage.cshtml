@model SendMessageViewModel
@{
    ViewData["Title"] = "Yeni Mesaj";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <form method="post">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">✉️ Yeni Mail Gönder</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="ReceiverEmail" placeholder="Kime:" required>
                    <span asp-validation-for="ReceiverEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Subject" placeholder="Konu:" required>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="Category">
                        <option value="">Kategori Seçin</option>
                        <option value="Önemli">Önemli</option>
                        <option value="İş">İş</option>
                        <option value="Aile">Aile</option>
                        <option value="Kişisel">Kişisel</option>
                        <option value="Diğer">Diğer</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Body" rows="8" placeholder="Mesajınızı yazın..." required></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="SaveAsDraft">
                    <label class="form-check-label" asp-for="SaveAsDraft">Taslak olarak kaydet</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="far fa-envelope"></i> Gönder
                    </button>
                    <a href="/Message/Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
